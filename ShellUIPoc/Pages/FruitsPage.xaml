<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:ShellUIPoc.Pages.Base"
             xmlns:vm="clr-namespace:ShellUIPoc.ViewModels"
             x:Class="ShellUIPoc.Pages.FruitsPage"
             x:DataType="vm:FruitsViewModel"
             x:TypeArguments="vm:FruitsViewModel"
             Title="FruitPage">
    <VerticalStackLayout>
        <Label 
            Text="Fruits!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Pets" Command="{Binding PetsCommand}" PropertyChanged="Button_PropertyChanged" />
        <CheckBox></CheckBox>
        <Button Text="BALLS!" Clicked="Button_Clicked"></Button>
    </VerticalStackLayout>
</pages:BasePage>